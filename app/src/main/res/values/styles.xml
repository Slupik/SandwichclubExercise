<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppSandwichHeadline" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_sandwich_headline</item>
        <item name="android:textColor">@color/sandwich_text</item>
    </style>

    <style name="AppSandwichLabel" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_sandwich_label</item>
        <item name="android:textColor">@color/sandwich_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSandwichHeaderLabel" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_sandwich_header_label</item>
        <item name="android:textColor">@color/sandwich_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSandwichNormalText" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_sandwich_normal_text</item>
        <item name="android:textColor">@color/sandwich_text</item>
    </style>

    <style name="AppSandwichHeader" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_sandwich_header</item>
        <item name="android:textColor">@color/sandwich_text</item>
    </style>
</resources>
